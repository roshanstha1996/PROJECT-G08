<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/line1"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <TextView
        android:id="@+id/tvRowLine1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Row data 1 goes here"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tvRowLine2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Row data 2 goes here"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvRowLine1"/>

    <ImageView
        android:id="@+id/isCompletedImage"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/check"
        app:layout_constraintBottom_toBottomOf="@+id/tvRowLine2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvRowLine1"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>